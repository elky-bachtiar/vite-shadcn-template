{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "allowJs": true,
    "checkJs": false
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "require-await"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "@supabase/supabase-js": "npm:@supabase/supabase-js@2.49.1",
    "stripe": "npm:stripe@17.7.0"
  }
}
